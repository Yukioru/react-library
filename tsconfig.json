{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "$components/*": ["components/*"]
    },
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", ".ladle"]
}
